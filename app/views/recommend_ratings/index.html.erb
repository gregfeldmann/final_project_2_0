<div class="page-header">
  <h1>
    Recommend ratings
    <a href="/recommend_ratings/new" class="btn btn-lg btn-success">New Recommend rating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Rating</th>
        <th>Friend</th>
        <th>Actions</th>
      </tr>

      <% @recommend_ratings.each do |recommend_rating| %>
      <tr>
        <td>
          <% if recommend_rating.rating.present? %>
            <a href="/ratings/<%= recommend_rating.rating.id %>">
              <%= recommend_rating.rating.entertainment_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if recommend_rating.friend.present? %>
            <a href="/friends/<%= recommend_rating.friend.id %>">
              <%= recommend_rating.friend.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/recommend_ratings/<%= recommend_rating.id %>" class="btn btn-primary">Show</a>
          <a href="/recommend_ratings/<%= recommend_rating.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recommend_rating/<%= recommend_rating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recommend_ratings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
