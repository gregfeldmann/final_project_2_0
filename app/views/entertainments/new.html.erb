<!-- Validation failure messages -->
<% if @entertainment.errors.any? %>
  <% @entertainment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Entertainment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_entertainment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @entertainment.title %>">
      </div>

      <!-- Label and input for running_time -->
      <div class="form-group">
        <label for="running_time" class="control-label">
          Running time
        </label>

        <input type="text" id="running_time" name="running_time" placeholder="Running time" class="form-control" value="<%= @entertainment.running_time %>">
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @entertainment.rating %>">
      </div>

      <!-- Label and input for picture -->
      <div class="form-group">
        <label for="picture" class="control-label">
          Picture
        </label>

        <input type="text" id="picture" name="picture" placeholder="Picture" class="form-control" value="<%= @entertainment.picture %>">
      </div>

      <button class="btn btn-success">
        Create Entertainment
      </button>
      or
      <a href="/entertainments">Cancel</a>
    </form>
  </div>
</div>
